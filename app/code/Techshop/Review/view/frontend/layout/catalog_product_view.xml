        </referenceBlock>
        <referenceBlock name="product.info.main">
            <block class="Techshop\Review\Block\ReviewList" name="techshop.review.list" as="techshop_review_list" template="Techshop_Review::review/list.phtml" />
        </referenceBlock>

    </body>
</page>
