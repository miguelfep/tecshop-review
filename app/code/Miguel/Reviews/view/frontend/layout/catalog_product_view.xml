<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Miguel_Reviews::css/review_styles.css"/>
        <script src="Miguel_Reviews::js/review.js"/>
    </head>
    <body>
        <!-- Remove o bloco de avaliação padrão do Magento -->
        <referenceBlock name="reviews.tab" remove="true"/>

        <!-- Adicione seu bloco de avaliação personalizado no lugar do bloco de avaliação padrão -->
        <referenceContainer name="product.info.main">
            <block class="Miguel\Reviews\Block\ReviewList" name="miguel.reviews.list" template="Miguel_Reviews::review_list.phtml" after="-" />
        </referenceContainer>
    </body>
</page>
